<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.ReviewActivity">

    <TextView
        android:id="@+id/txtReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLEASE REVIEW YOUR EXPERIENCE"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#ffc109"/>

    <ImageView
        android:id="@+id/ivReviewFoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_user"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/txtReviewUserNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AZRI NURVANI"
        android:layout_gravity="center_horizontal"/>

    <RatingBar
        android:id="@+id/ratingReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:numStars="5"
        android:rating="3"/>

    <TextView
        android:id="@+id/txtReview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Give 1 for bad service, 5 for good"
        android:layout_gravity="center_horizontal"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtReviewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Your Comment"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/txtReview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PLease give us more information"/>

    <CheckBox
        android:id="@+id/cboReview"
        android:checked="false"
        android:text="The driver did NOT provide me masker and haid cover"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnReview"
        android:text="SEND REVIEW"
        android:layout_gravity="center_horizontal"
        android:background="#ffc109"

        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>